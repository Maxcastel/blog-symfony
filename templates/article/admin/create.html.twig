{% extends 'base.html.twig' %}

{% block title %}Creer article{% endblock %}

{% block body %}

    <section class="d-flex flex-column justify-content-center" style="height: calc(100vh - 72px); padding-bottom: 72px">
        <h1 class="my-4">Creer un article</h1>

        {{ form_start(form, {'method': 'POST'}) }}

        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.imageUrl) }}
        {# {{ form_row(form.content) }} #}
        <div class="form-group mb-3">
            <label for="editor">{{ form_label(form.content) }}</label>
            <div id="editor">
                {{ form_widget(form.content) }}
            </div>
        </div>

        <button class="btn btn-primary">
            Creer
        </button>

        {{ form_end(form) }}
        
        <button id="deleteButton">aaa</button>

        {% block javascripts %}
            {{ parent() }}
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Initialize Quill editor
                    const quill = new Quill('#editor', {
                        theme: 'snow'
                    });
                    const text = quill.getText(0, 10);
                    console.log(text);
                });
            </script>
        {% endblock %}
    </section>
    
{% endblock %}

